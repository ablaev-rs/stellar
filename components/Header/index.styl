// 1u is a 8px grid unit. 1u === 8px
$textColor = #636363 
$borderColor = #dddddd 
$colorWhite = #ffffff 

.root
  align-items center
  padding 8u 1u 0u 1u
  align-items center
  +tablet()
    padding 11u 11u 9u 11u
  +desktop()
    padding 13u 11u 11u 11u

.image
  width 11u
  height 11u
  
.h1
  color $colorWhite 
  font-size 4u
  font-weight 300
  margin-top 4u
  +tablet()
    margin-top 3u
    font-size 6u

.sloganBox
  margin-top 2u

.sloganRow
  flex-direction row
  justify-content center
  +tablet()
    margin-top 1u
  +desktop()
    margin-top 1u

.slogan
  font-size 14px
  line-height: 3u
  margin-top 0u
  color $borderColor
  font-weight 300
  +tablet()
    font-size 2u


.link
  text-decoration underline
  text-decoration-color $borderColor
  text-decoration-style dotted