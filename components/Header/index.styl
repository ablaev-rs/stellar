// 1u is a 8px grid unit. 1u === 8px
$textColor = #636363 
$borderColor = #dddddd 
$colorWhite = #ffffff 

.root
  align-items center
  padding-top 8u
  +tablet()
    padding-top 11u
    padding-bottom 9u
  +desktop()
    padding-top 13u
    padding-bottom 11u
  +wide()
    padding-top 17u
    padding-bottom 15u

.image
  width 11u
  height 11u
  
.h1
  color $colorWhite 
  font-size 4u
  font-weight 300
  margin-top 4u
  +tablet()
    margin-top 3u
    font-size 6u
  +wide()
    margin-top 4u
    font-size 6.5u

.sloganBox
  margin-top 2u
  text-align center
  width 350px
  +wide()
    margin-top 4u

.slogan
  font-size 14px
  line-height: 3u
  color $borderColor
  font-weight 300
  +tablet()
    font-size 2u
  +wide()
    line-height 5u

.link
  text-decoration underline
  text-decoration-color $borderColor
  text-decoration-style dotted