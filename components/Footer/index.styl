// 1u is a 8px grid unit. 1u === 8px
$textColor = #636363 
$borderColor = #dddddd 
$colorWhite = #ffffff 

.root
  align-items flex-start
  padding 4u 3u 3u 3u
  flex-direction column
  width 100%
  text-align left 

.h2
  font-size 3u
  color $colorWhite 
  font-weight 300

.h3
  font-size 3u
  color $colorWhite 
  font-weight 300
  margin-top 3u
  +desktop()
    margin-top 0u

.text
  color $colorWhite 
  font-size 2u
  line-height 3u
  font-weight 300
  margin-top 3u

.copyright
  margin-top 3u
  margin-bottom 3u
  width 100%
  flex-direction row
  +desktop()
    justify-content center

.text
  color $colorWhite 
  font-size 14px
  text-align left
  +desktop()
    font-size 2u
    line-height 4u

.social
  flex-direction row
  margin-top 6u
  width 100%
  text-align left 

.imageBorder
  align-items center
  justify-content center
  border solid 1px $borderColor 
  padding 1u
  border-radius 40px
  margin-left 2u
  &.first
    margin-left 0u

.image
  width 3u
  height 3u
  +tablet()
    width 3u
    height 3u

.link
  text-decoration underline
  text-decoration-color $colorWhite 
  text-decoration-style dotted

.footerBox
  +desktop()
    flex-direction row

.infoBox
  +desktop()
    flex 1

.contact
  align-items flex-start
  +tablet()
    margin 0u
  +desktop()
    flex 1
    margin-left 2u

.contactData
  margin-top 3u
  flex-direction row
  align-items flex-start

.title
  font-weight bold
  width 11u
  line-height 3u
  +tablet()
    width 11u
  +desktop()
    width 11u

.value
  line-height 3u
  text-align left
  flex 1
  width 40u
  max-width 32u
  +tablet()
    width 68u
    max-width 68u
  +desktop()
    width 68u
    max-width 68u

.title,
.value
  color $colorWhite 
  font-size 2u

.btnWrapper
  margin-top 4u