// 1u is a 8px grid unit. 1u === 8px
$textColor = #636363 
$borderColor = #dddddd 
$colorWhite = #ffffff 

.root
  padding 4u 2u 7u 2u
  flex-direction column
  width 100%

.h2
  font-size 3u
  color $colorWhite 
  font-weight 300

.h3
  font-size 3u
  color $colorWhite 
  font-weight 300
  margin-top 3u
  +desktop()
    margin-top 0u

.text
  color $colorWhite 
  font-size 2u
  line-height 3u
  font-weight 300
  margin-top 3u
  +desktop()
    font-size 2u
    line-height 4u

.social
  flex-direction row
  margin-top 4u
  width 100%

.imageBorder
  align-items center
  justify-content center
  border solid 1px $borderColor 
  padding 1u
  border-radius 40px

.image
  width 3u
  height 3u

.btnSocial
  border-radius 9999px
  margin-left 2u
  &.first
    margin-left 0u

.footerBox
  +desktop()
    flex-direction row

.infoBox
  +desktop()
    flex 1

.contact
  align-items flex-start
  +tablet()
    margin 0u
  +desktop()
    flex 1
    margin-left 2u
  +wide()
    margin-left 3u

.contactData
  margin-top 3u
  flex-direction row

.title
  font-weight bold
  width 11u
  line-height 3u

.value
  line-height 3u
  flex 1
  width 40u
  max-width 32u
  +tablet()
    width 68u
    max-width 68u

.title,
.value
  color $colorWhite 
  font-size 2u

.btnWrapper
  margin-top 4u

.copyright
  margin-top 2u
  width 100%
  flex-direction row
  +desktop()
    justify-content center

.copy
  color $colorWhite 
  font-size 12px
  line-height 3u
  font-weight 300
  margin-top 3u

.link
  text-decoration underline
  text-decoration-color $colorWhite 
  text-decoration-style dotted