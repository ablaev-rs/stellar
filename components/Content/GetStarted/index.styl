// 1u is a 8px grid unit. 1u === 8px

.root
  align-items flex-start

.container 
  padding 5u 3u 0u 3u
  flex-direction column
  width 100%
  align-items center
  text-align center
  +tablet()
    justify-content space-between
    flex-direction row-reverse


.h2
  font-size 22
  color #636363
  font-weight 300
  margin-top 3u
  +tablet()
    font-size 36px

.sep
  width 12u
  margin 2u 0u 4u 0u
  border solid 1px #dddddd
  +tablet()
    width 17u

.text
  color #636363
  font-size 14px
  line-height 24px
  font-weight 300
  +tablet()
    color #636363
    font-size 2u
    line-height 4u
    font-weight 300

.infoBox
  align-items center
  +tablet()
    flex 1

.btn
  width 100%
  margin-top 2u

.btnText
  color #636363
  font-size 14px
  line-height 3u
  font-weight 300
  padding 1u 5u
  border solid 1px #ddd
  border-radius 1u
  +tablet()
    font-size 2u
    padding 1u 5u

.btnBlue
  margin-top 2u
  color #fff
  background #9acff2