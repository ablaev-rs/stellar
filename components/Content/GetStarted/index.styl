// 1u is a 8px grid unit. 1u === 8px
$textColor = #636363
$borderColor = #dddddd
$colorWhite = #ffffff

.container 
  padding 3u 3u 0u 3u
  width 100%
  text-align center

.infoBox
  align-items center

.h2
  font-size 3u
  color $textColor
  font-weight 300
  margin-top 3u
  +tablet()
    font-size 4u

.sep
  width 12u
  margin 2u 0u 4u 0u
  border solid 1px $borderColor 
  +tablet()
    width 17u

.text
  color $textColor
  font-size 2u
  line-height 3u
  font-weight 300
  +tablet()
    color $textColor
    font-size 2u
    line-height 4u
    font-weight 300

.groupBtn
  width 100%
  margin-top 4u
  +tablet()
    flex-direction row
    justify-content center

.btn
  width 100%
  +tablet()
    width 22u

.btnText
  color $textColor
  font-size 2u
  line-height 3u
  font-weight 300
  padding 1u 0u
  border solid 1px $borderColor 
  border-radius 1u
  margin-top 2u

.btnBlue
  color $colorWhite 
  background #9acff2
  +tablet()
    margin-right 3u