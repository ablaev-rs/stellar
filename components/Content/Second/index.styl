// 1u is a 8px grid unit. 1u === 8px

.root
  align-items flex-start

.container 
  padding 5u 3u 6u 3u
  flex-direction column
  width 100%
  align-items center
  border-bottom solid 1px #ddd
  text-align center
  +tablet()
    padding 5u 4u 6u 4u

.h2
  font-size 22px
  color #636363
  font-weight 300
  margin-top 3u
  +tablet()
    font-size 36px

.sep
  width 12u
  margin 2u 0u 4u 0u
  border solid 1px #dddddd
  +tablet()
    width 17u

.text
  color #636363
  font-size 14px
  line-height 24px
  font-weight 300
  +tablet()
    color #636363
    font-size 2u
    line-height 3u
    font-weight 300

.justify
  text-align justify
  
.infoBox
  align-items center
  +tablet()
    flex 1

.imageBox
  align-items center
  +tablet()
    margin-left 0u

.image
  width 8u
  height 8u
  +tablet()
    width 5u
    height 5u

.items
  width 90%
  margin 4u 0u
  +tablet()
    margin-top 26u
    flex-direction row
    flex-wrap nowrap
    justify-content center

.item
  padding 4u
  

.count
  font-size 4u
  color #fff
  margin-top 1u
  +tablet()
    font-size 3u

.explanation
  margin-top 1u
  font-size 12px
  color #fff

.etiam
  background #EFA8B0
  border-top-left-radius 1u
  border-top-right-radius 1u
  +tablet()
    border-top-left-radius 1u
    border-top-right-radius 0u
    border-bottom-left-radius 1u

.magna
  background #C79CC8

.tempus
  background #A89CC8

.aliquam
  background #9BB2E1

.nullam
  background #8CC9F0
  border-bottom-left-radius 1u
  border-bottom-right-radius 1u
  +tablet()
    border-bottom-left-radius 0u
    border-bottom-right-radius 1u
    border-top-right-radius 1u

.btn
  margin-top 4u
  width 100%
  +tablet()
    width 20u

.btnText
  color #636363
  font-size 14px
  line-height 3u
  font-weight 300
  padding 1u 5u
  border solid 1px #ddd
  border-radius 1u
  +tablet()
    font-size 14px
    padding 1u 5u