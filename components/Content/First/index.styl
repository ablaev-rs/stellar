// 1u is a 8px grid unit. 1u === 8px
$textColor = #636363
$borderColor = #dddddd

.root
  align-items flex-start
  padding 7u 3u 7u 3u
  flex-direction column
  width 100%
  align-items center
  border-bottom solid 1px $borderColor
  text-align center

.infoBox
  align-items center
  +tablet()
    flex 1
    
.h2
  font-size 3u
  color $textColor 
  font-weight 300
  +tablet()
    font-size 4u

.h3
  font-size 2u
  color $textColor 
  font-weight 300
  margin-top 3u
  +tablet()
    margin-top 4u

.sep
  width 12u
  height 2px
  margin-top 4u
  background-color $borderColor
  +tablet()
    margin 4u 0u
  +desktop()
    width 17u

.text
  color $textColor 
  font-size 2u
  line-height 3u
  font-weight 300
  margin-top 2u

.items
  margin-top 4u
  +tablet()
    margin-top 14u
    justify-content space-around
    flex-direction row
    flex-wrap wrap
    justify-content center
  +desktop()
    width 100%
    justify-content space-around

.item
  align-items center
  margin-top 4u
  &.first
    margin-top 0u
  +tablet()
    width 38u
    margin-top 4u
    &.first
      margin-top 4u
  +desktop()
    width 34u

.imageBorder
  align-items center
  justify-content center
  border solid 1px $borderColor
  padding 1u
  border-radius 136px
  +tablet()
    margin-left 0u

.image
  width 15u
  height 15u
  border-radius 120px
  border solid 1px $borderColor
  +tablet()
    width 20u
    height 20u

.btnWrapper
  margin-top 4u
  width 100%
  align-items center