// 1u is a 8px grid unit. 1u === 8px
$textColor = #636363
$borderColor = #dddddd
$colorWhite = #ffffff

.root
  align-items flex-start

.container 
  padding 7u 3u 8u 3u
  flex-direction column
  width 100%
  align-items center
  border-bottom solid 1px $borderColor
  text-align center
  +tablet()
    padding 8u 8u 10u 8u
  +desktop()
    justify-content space-between
    flex-direction row-reverse
    padding 6u 8u 8u 8u

.h2
  font-size 22px
  color $textColor
  font-weight 300
  margin-top 3u
  +tablet()
    font-size 28px
    margin-top 4u
  +desktop()
    font-size 28px

.sep
  width 12u
  margin 2u 0u 4u 0u
  border solid 1px $borderColor
  +tablet()
    margin 4u 0u 4u 0u
  +desktop()
    margin 4u 0u 4u 0u
    width 13u

.text
  color $textColor
  font-size 14px
  line-height 30px
  font-weight 300
  +tablet()
    line-height 26px
  +desktop()
    line-height 26px
    text-align left
  
.infoBox
  align-items center
  +desktop()
    align-items flex-start
    flex 1

.imageBox
  +desktop()
    margin-left 8u


.imageBorder
  align-items center
  justify-content center
  border solid 1px $borderColor
  width 27u
  height 27u
  border-radius 50%
  +tablet()
    width 35u
    height 35u

.image
  width 25u
  height 25u
  border-radius 50%
  border solid 1px $borderColor
  +tablet()
    width 32u
    height 32u

.btn
  margin-top 4u
  width 100%
  +tablet()
    width 20u

.btnText
  color $textColor
  font-size 14px
  line-height 3u
  font-weight 300
  padding 1u 5u
  border solid 1px $borderColor
  border-radius 1u
  +tablet()
    font-size 14px
    padding 1u 5u